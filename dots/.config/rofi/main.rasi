configuration {
	show-icons: true;
	icon-theme: "Papirus";
	font: "Hack Bold 10";
	terminal: "kitty";
	modi: "drun,run,window,file-browser";
	width: 25;
	lines: 7;
	columns: 1;
	bw: 7;
	location: 0;
	padding: 20;
	ssh-client: "ssh";
	ssh-command: "{terminal} -e {ssh-client} {host} [-p {port}]";
	run-command: "{cmd}";
	run-shell-command: "{terminal} -e {cmd}";
	window-command: "wmctrl -i -R {window}";
	sidebar-mode: true;
	line-margin: 10;
	scrollbar-width: 0;
}
